<div class="row m-3">
    {{#each itemList}}
        <div class="card m-2">
            <div class="row p-3 my-3">
                <div class="col-2">
                    {{number}}
                    <b>{{status}}</b>
                </div>
                <div class="col-2">
                    {{#with amount}}
                        {{title}}:
                        {{value}}
                    {{/with}}
                </div>
                <div class="col-6">
                    {{#each images}}
                        <img src="{{this}}">
                    {{/each}}
                </div>
                <div class="col-2">
                    {{#with button}}
                        {{#if isPrimary}}<button class="btn btn-primary" href="{{link}}">{{text}}</button>{{/if}}
                    {{/with}}
                </div>
            </div>
        </div>
    {{/each}}
</div>