<div>
  {{#with main}}
    <main>
        <section>
                {{> title big=true data='Work history'}}
            <div>
                <ul>
                    {{#each works}}
                        <li>
                            <div>{{position}}</div>
                            <br>
                            {{#if company.url}}
                                {{> link text=company.name href=company.url blank=true noLine=true}}
                            {{else}}
                                <b>{{company.name}}</b>
                            {{/if}}
                            <br>

                            <div>
                                {{duration.from}} - {{#if duration.to}} {{duration.to}} 
                                {{else}} (досі працюємо) {{/if}} 
                            </div>

                            <br>
                            <br>

                            <div>
                                <strong>Projects ({{projectAmount}}) </strong>
                            </div>

                            <br>

                            <ul>
                                {{#each projects}}
                                    <li>
                                        <div>{{> link text=name href=url blank=true noLine=true}}</div>
                                        <br>
                                        <div>
                                            {{about}}
                                        </div>
                                        <br>
                                        <div>
                                            <div><em>Project stacks ({{stackAmount}})</em></div>
                                            <br>
                                            {{#each stacks}}
                                                <li><div>{{name}}</div></li>
                                            {{/each}}
                                            <br>
                                            <div><em>Project awards</em></div>
                                            <br>
                                            {{#each awards}}
                                                <li><div>{{name}}</div></li>
                                            {{/each}}
                                        </div>
                                    </li>
                                {{/each}}
                            </ul>
                        </li>
                        <br>
                    {{/each}}
                </ul>
            </div>
        </section>
    </main>
  {{/with}}
</div>