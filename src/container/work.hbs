<div class="m-4">
  {{#with main}}
    <main>
        <section>
                {{> title big=true data='Work history'}}
            <div>
                <ul>
                    {{#each works}}
                        <li class="mb-4">
                            <div class="mb-4">{{position}}</div>
                            {{#if company.url}}
                                {{> link text=company.name href=company.url blank=true noLine=true}}
                            {{else}}
                                <b>{{company.name}}</b>
                            {{/if}}
                            <div class="mt-4 mb-4">
                                {{duration.from}} - {{#if duration.to}} {{duration.to}} 
                                {{else}} (досі працюємо) {{/if}} 
                            </div>
                            <div class="mt-4 mb-4">
                                <strong>Projects ({{projectAmount}}) </strong>
                            </div>
                            <ul>
                                {{#each projects}}
                                    <li>
                                        <div>{{> link text=name href=url blank=true noLine=true}}</div>
                                        <div class="mt-4 mb-4">
                                            {{about}}
                                        </div>
                                        <div>
                                            <div class="mb-4"><em>Project stacks ({{stackAmount}})</em></div>
                                            {{#each stacks}}
                                                <li><div>{{name}}</div></li>
                                            {{/each}}
                                            <div class="mt-4 mb-4"><em>Project awards</em></div>
                                            {{#each awards}}
                                                <li><div>{{name}}</div></li>
                                            {{/each}}
                                        </div>
                                    </li>
                                {{/each}}
                            </ul>
                        </li>
                    {{/each}}
                </ul>
            </div>
        </section>
    </main>
  {{/with}}
</div>