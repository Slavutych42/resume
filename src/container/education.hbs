<div class="m-4">
    {{#with main}}
        <main>
            <section>
                {{> title big=true data="My educations"}}
                <ul>
                    {{#each education}}
                        <li>
                            {{name}}

                            {{#unless isEnd}} (ще навчаюсь) {{/unless}}

                        </li>
                    {{/each}}
                </ul>
            </section>
        </main>
    {{/with}}
</div>

<div class="m-4">
    {{#with main}}
        <main>
            <section>
                {{> title big=false data="My certificates"}}
                <ul>
                    {{#each certificates}}
                        <li>
                            {{name}}
                            ({{id}})
                        </li>
                    {{/each}}
                </ul>
            </section>
        </main>
    {{/with}}
</div>